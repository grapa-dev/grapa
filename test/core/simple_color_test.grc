/* Simple Color Output Test */

"=== SIMPLE COLOR OUTPUT TEST ===\n".echo();

input = "foo bar baz";
result = input.grep("foo", "oL");

("Result string: " + result.str() + "\n").echo();
("Result[0] hex: " + result[0].hex() + "\n").echo();

/* Test without color for comparison */
result2 = input.grep("foo", "o");
("Result without color: " + result2.str() + "\n").echo();
("Result2[0] hex: " + result2[0].hex() + "\n").echo();

"=== TEST COMPLETE ===\n".echo(); 