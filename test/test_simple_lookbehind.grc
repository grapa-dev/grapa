/* Simple lookbehind test */

"=== SIMPLE LOOKBEHIND TEST ===\n".echo();

/* Test basic lookbehind */
input = "bar foo";
result = input.grep("(?<=bar )foo", "o");
("Result: " + result.str() + "\n").echo();
("Expected: [\"foo\"]\n").echo();

/* Test without lookbehind for comparison */
result2 = input.grep("foo", "o");
("Result without lookbehind: " + result2.str() + "\n").echo();

"=== TEST COMPLETE ===\n".echo(); 