/* Pattern debug test */

"=== PATTERN DEBUG TEST ===\n".echo();

/* Test 1: Literal string match */
"Test 1: Literal string match\n".echo();
result = "hello world".grep("hello");
"Result size: " + result.size() + "\n".echo();
"---\n".echo();

/* Test 2: Exact match */
"Test 2: Exact match\n".echo();
result = "hello".grep("hello");
"Result size: " + result.size() + "\n".echo();
"---\n".echo();

/* Test 3: No match */
"Test 3: No match\n".echo();
result = "hello world".grep("xyz");
"Result size: " + result.size() + "\n".echo();
"---\n".echo();

/* Test 4: Simple regex */
"Test 4: Simple regex\n".echo();
result = "hello world".grep("h.*o");
"Result size: " + result.size() + "\n".echo();
"---\n".echo();

/* Test 5: Word boundary */
"Test 5: Word boundary\n".echo();
result = "hello world".grep("\\bhello\\b");
"Result size: " + result.size() + "\n".echo();
"---\n".echo();

