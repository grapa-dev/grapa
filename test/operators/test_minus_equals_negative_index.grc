/* Testing -= with negative indexing */

"Testing -= operator with negative indexing\n".echo();

/* Test 1: Array -= array[-1] (last element) */
arr1 = [10, 20, 30, 40, 50];
("Original arr1: " + arr1.str() + "\n").echo();

arr1 -= arr1[-1];
("After arr1 -= arr1[-1]: " + arr1.str() + " (expected: [10,20,30,40])\n").echo();

/* Test 2: Array -= array[-2] (second to last) */
arr2 = [100, 200, 300, 400, 500];
("Original arr2: " + arr2.str() + "\n").echo();

arr2 -= arr2[-2];
("After arr2 -= arr2[-2]: " + arr2.str() + " (expected: [100,200,300,500])\n").echo();

/* Test 3: Array -= array[-3] (third to last) */
arr3 = [1, 2, 3, 4, 5, 6];
("Original arr3: " + arr3.str() + "\n").echo();

arr3 -= arr3[-3];
("After arr3 -= arr3[-3]: " + arr3.str() + " (expected: [1,2,3,5,6])\n").echo();

/* Test 4: Array -= array[0] vs array[-1] */
arr4 = [1000, 2000, 3000];
("Original arr4: " + arr4.str() + "\n").echo();

arr4 -= arr4[0];  // Remove first
("After arr4 -= arr4[0]: " + arr4.str() + " (expected: [2000,3000])\n").echo();

arr4 -= arr4[-1];  // Remove last
("After arr4 -= arr4[-1]: " + arr4.str() + " (expected: [2000])\n").echo(); 