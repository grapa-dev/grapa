/* Simple test for missing ripgrep features */

"=== SIMPLE MISSING RIPGREP FEATURES TEST ===\n".echo();

/* Test 1: Column numbers (T) */
"Test 1: Column numbers (T)\n".echo();
input = "foo bar baz";
result = input.grep("foo", "oT");
"Result: " + result.str() + "\n".echo();
"Result hex: " + result.hex() + "\n".echo();
"Expected: ['5:foo'] (column:match)\n".echo();
"---\n".echo();

/* Test 2: Word boundary (w) */
"Test 2: Word boundary (w)\n".echo();
input = "foo bar foobar";
result = input.grep("foo", "ow");
"Result: " + result.str() + "\n".echo();
"Result hex: " + result.hex() + "\n".echo();
"Expected: ['foo'] (only whole word)\n".echo();
"---\n".echo();

/* Test 3: Null-data mode (z) */
"Test 3: Null-data mode (z)\n".echo();
input = "foo\0bar\0foo";
result = input.grep("foo", "oz");
"Result: " + result.str() + "\n".echo();
"Result hex: " + result.hex() + "\n".echo();
"Expected: ['foo', 'foo'] (null-separated)\n".echo();
"---\n".echo();

/* Test 4: Color output (L) */
"Test 4: Color output (L)\n".echo();
input = "foo bar";
result = input.grep("foo", "oL");
"Result: " + result.str() + "\n".echo();
"Result hex: " + result.hex() + "\n".echo();
"Expected: ['\\x1b[1;31mfoo\\x1b[0m'] (with color)\n".echo();
"---\n".echo();

"=== TEST COMPLETED ===\n".echo(); 