/* Debug test for zero-length matching */

"=== ZERO-LENGTH MATCH DEBUG TEST ===\n".echo();

/* Test 1: Basic zero-length match */
"Test 1: Basic zero-length match\n".echo();
result1 = "abc".grep("(?=b)", "");
("Result: " + result1.str() + "\n").echo();
"---\n".echo();

/* Test 2: Zero-length match with "o" */
"Test 2: Zero-length match with 'o'\n".echo();
result2 = "abc".grep("(?=b)", "o");
("Result: " + result2.str() + "\n").echo();
"---\n".echo();

/* Test 3: Zero-length match with word boundary */
"Test 3: Zero-length match with word boundary\n".echo();
result3 = "abc".grep("\\b", "o");
("Result: " + result3.str() + "\n").echo();
"---\n".echo();

/* Test 4: Zero-length match with lookahead */
"Test 4: Zero-length match with lookahead\n".echo();
result4 = "abc".grep("(?=.)", "o");
("Result: " + result4.str() + "\n").echo();
"---\n".echo();

"=== ZERO-LENGTH MATCH DEBUG TEST COMPLETE ===\n".echo(); 